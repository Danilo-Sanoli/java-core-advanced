<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
  Checkstyle "Google-like" para projetos Java 17+
  - Indentação: 2 espaços
  - Largura de linha: 100 colunas
  - Import order, whitespace e braces conforme Google Style
  - Javadoc: exigido para públicos, relaxado para @Override e testes
  Salve em: config/checkstyle/checkstyle.xml
-->

<module name="Checker">
    <property name="severity" value="warning"/>
    <property name="charset" value="UTF-8"/>
    <property name="fileExtensions" value="java"/>
    <property name="tabWidth" value="2"/>

    <!-- Regras de arquivo -->
    <module name="NewlineAtEndOfFile"/>
    <module name="FileTabCharacter">
        <property name="eachLine" value="true"/>
    </module>

    <!-- 100 colunas; ignora package/import para evitar falsos positivos -->
    <module name="LineLength">
        <property name="max" value="100"/>
        <property name="ignorePattern" value="^package .*|^import .*"/>
    </module>

    <!-- Espaços à direita -->
    <module name="RegexpSingleline">
        <property name="format" value="\s+$"/>
        <property name="message" value="Trailing whitespace proibido"/>
    </module>

    <!-- Evita quebra de linha em package/import -->

    <module name="TreeWalker">

        <module name="NoLineWrap"/>
        <module name="SuppressionCommentFilter">
            <property name="offCommentFormat" value="CHECKSTYLE\:OFF"/>
            <property name="onCommentFormat" value="CHECKSTYLE\:ON"/>
            <property name="checkFormat" value=".*"/>
        </module>

        <!-- Organização de imports -->
        <module name="ImportOrder">
            <property name="ordered" value="true"/>
            <property name="separated" value="true"/>
            <property name="option" value="top"/>
            <property name="groups" value="java,javax,org,com"/>
            <property name="sortStaticImportsAlphabetically" value="true"/>
        </module>
        <module name="AvoidStarImport"/>
        <module name="RedundantImport"/>
        <module name="UnusedImports"/>

        <!-- Uma classe pública por arquivo -->
        <module name="OneTopLevelClass"/>

        <!-- Nomes e pacotes -->
        <module name="PackageName"/>
        <module name="TypeName"/>
        <module name="MemberName"/>
        <module name="ParameterName"/>
        <module name="LocalVariableName"/>

        <!-- Modificadores -->
        <module name="ModifierOrder"/>
        <module name="RedundantModifier"/>

        <!-- Javadoc: exige em tipos/métodos públicos; ignora @Override e nomes de teste -->
        <module name="JavadocType">
            <property name="severity" value="warning"/>
        </module>
        <module name="JavadocMethod">
            <property name="allowMissingParamTags" value="true"/>
            <property name="allowedAnnotations" value="Override"/>
        </module>

        <!-- Blocos e chaves (K&R) -->
        <module name="NeedBraces"/>
        <module name="LeftCurly">
            <property name="option" value="eol"/>
            <property name="ignoreEnums" value="false"/>
        </module>
        <module name="RightCurly">
            <property name="option" value="alone_or_singleline"/>
        </module>
        <module name="EmptyBlock">
            <property name="option" value="TEXT"/>
        </module>

        <!-- Espaços e parênteses -->
        <module name="WhitespaceAround"/>
        <module name="WhitespaceAfter"/>
        <module name="NoWhitespaceBefore"/>
        <module name="NoWhitespaceAfter">
            <property name="allowLineBreaks" value="true"/>
        </module>
        <module name="ParenPad"/>
        <module name="MethodParamPad"/>

        <!-- Quebra de operadores/sep. no fim da linha, como recomenda o guia -->
        <module name="OperatorWrap">
            <property name="option" value="eol"/>
            <property name="tokens"
                      value="ASSIGN,BAND,BOR,BXOR,DIV,EQUAL,GE,GT,LAND,LE,LITERAL_INSTANCEOF,LOR,LT,MINUS,MOD,NOT_EQUAL,PLUS,QUESTION,SL,SR,STAR,BSR"/>
        </module>
        <module name="SeparatorWrap">
            <property name="option" value="eol"/>
            <property name="tokens" value="COMMA,DOT,SEMI"/>
        </module>

        <!-- Linhas em branco e indentação (2 espaços) -->
        <module name="EmptyLineSeparator">
            <property name="allowNoEmptyLineBetweenFields" value="true"/>
        </module>
        <module name="Indentation">
            <property name="basicOffset" value="2"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="2"/>
            <property name="throwsIndent" value="4"/>
            <property name="lineWrappingIndentation" value="4"/>
            <property name="tabWidth" value="2"/>
        </module>

        <!-- Tamanho de método e nº parâmetros (limites razoáveis) -->
        <module name="MethodLength">
            <property name="max" value="150"/>
        </module>
        <module name="ParameterNumber">
            <property name="max" value="7"/>
        </module>

    </module>
</module>
